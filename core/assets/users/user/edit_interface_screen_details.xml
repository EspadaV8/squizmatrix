
<contents>
	<section name="User Details">
		<field attribute="username">
			<display_name>Username</display_name>
			<note>Unique system wide login name</note>
			<text width="8" height="1" />
		</field>
		<field attribute="password">
			<display_name>Password</display_name>
			<note>Enter once, then again to confirm</note>
			<password width="8" />
		</field>
		<field attribute="first_name">
			<display_name>First Name</display_name>
			<note />
			<text width="40" height="1" />
		</field>
		<field attribute="last_name">
			<display_name>Last Name</display_name>
			<note />
			<text width="40" height="1" />
		</field>
		<field attribute="email">
			<display_name>Email</display_name>
			<note />
			<email width="25" />
		</field>
		<field attribute="expiry_date">
			<display_name>Expiry Date</display_name>
			<note />
			<datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59">
				<show>
					<y style="t" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
	</section>
</contents>
