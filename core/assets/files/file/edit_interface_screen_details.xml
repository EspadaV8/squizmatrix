<contents>
	<section name="Details" write_access="write:attributes" limbo_access="1">
		<field attribute="name">
			<display_name>File Name</display_name>
			<note />
			<text width="25" height="1" />
		</field>
		<field attribute="allow_unrestricted">
			<display_name>Allow Unrestricted Access</display_name>
			<note>Set to Yes to allow this file to be be served by the web server if it is Live and publically readable.</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field>
			<display_name>Upload File</display_name>
			<note />
			<function_call>
				<paint_function   name="paintFileUpload"   />
				<process_function name="processFileUpload" />
			</function_call>
		</field>
		<field hidden="hidden" show_if="havePreUploadedFiles">
			<display_name>Choose Pre-Uploaded File</display_name>
			<note />
			<function_call>
				<paint_function   name="paintFileChooser"   />
				<process_function name="processFileChooser" />
			</function_call>
		</field>
	</section>
</contents>
