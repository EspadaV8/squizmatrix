<contents>
	<section name="Details">
		<field attribute="name">
			<display_name>Schema Name</display_name>
			<note />
		</field>
	</section>
	<section name="Workflow Summary">
		<field>
			<display_name></display_name>
			<note><![CDATA[When you have the lock for this schema, you can re-order the by dragging the step number up and down. Available drop points for that step will be highlighted. <strong>The changes you make will not take effect until you commit the screen.</strong>]]></note>
			<function_call>
				<paint_function   name="paintWorkflowSummary"   />	
				<process_function name="processWorkflowSummary" />
			</function_call>
		</field>
	</section>
	<section name="Steps Defined For This Workflow">
		<field>
			<display_name></display_name>
			<note />
			<function_call>
				<paint_function   name="paintSteps"   />
				<process_function name="processSteps" />
			</function_call>
		</field>
	</section>
	<section name="Create New Step">
		<field>
			<display_name></display_name>
			<note />
			<function_call>
				<paint_function   name="paintNewStep"   />
				<process_function name="processNewStep" />
			</function_call>
		</field>
	</section>
</contents>
