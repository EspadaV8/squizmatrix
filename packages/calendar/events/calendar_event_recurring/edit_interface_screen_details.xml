<contents>
	<section name="Details" write_access="write:attributes">
		<field attribute="name">
			<display_name>Name</display_name>
			<note />
			<text width="30" height="1" />
		</field>
		<field attribute="description">
			<display_name>Description</display_name>
			<note />
			<text width="40" height="3" />
		</field>
		<field attribute="start_date">
			<display_name>Start Date of First Instance</display_name>
			<note />
			<datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_null="0">
				<show>
					<y style="s" allow_null="0" />
					<m style="s" allow_null="0" />
					<d style="s" allow_null="0" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
		<field attribute="end_date">
			<display_name>End Date of First Instance</display_name>
			<note>Dates for future instances of this event will be determined by the frequency of recurrence</note>
			<datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_null="1">
				<show>
					<y style="s" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
		<field attribute="stop_date">
			<display_name>Stop Date for Recurrence</display_name>
			<note>No instances of this event will occur after this stop date</note>
			<datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_null="1">
				<show>
					<y style="s" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
		<field attribute="frequency">
			<display_name>Frequency of Recurrence</display_name>
			<note />
			<text width="20" height="1" />
		</field>
	</section>
</contents>