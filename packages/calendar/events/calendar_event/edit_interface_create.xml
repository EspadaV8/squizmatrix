<contents screen="details">
	<section name="Details">
		<field attribute="name" />
		<field attribute="description" />
		<field attribute="start_date">
			<display_name>Start Date</display_name>
			<note>The starting point for this event. Date component is mandatory, time component is optional</note>
			<datetime min="2004-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_null="0">
				<show>
					<y style="s" allow_null="0" />
					<m style="s" allow_null="0" />
					<d style="s" allow_null="0" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
		<field attribute="end_date">
			<display_name>End Date</display_name>
			<note>The end point for this event. May be ommitted, but must provide the same information as the start date if included</note>
			<datetime min="2004-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_null="1">
				<show>
					<y style="s" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
	</section>
</contents>