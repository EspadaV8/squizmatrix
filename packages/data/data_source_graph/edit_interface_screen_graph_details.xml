<contents>
	<section name="Edit Graph" write_access="write:attributes" limbo_access="1">
		<field>
			<function_call>
				<paint_function   name="paintGraphDetails"   />
				<process_function name="processGraphDetails" />
			</function_call>
		</field>
	</section>
	<section name="Width And Height" write_access="write:attributes" limbo_access="1">
		<field attribute="width">
			<int width="5" />
		</field>
		<field attribute="height">
			<int width="5" />
		</field>
	</section>
	<section name="Axes Colours" write_access="write:attributes" limbo_access="1">
		<field attribute="x_axis_colour">
			<colour />
		</field>
		<field attribute="y_axis_colour">
			<colour />
		</field>
		<field attribute="x_font_colour">
			<colour />
		</field>
		<field attribute="y_font_colour">
			<colour />
		</field>
	</section>
	<section name="Axes Titles And Intervals" write_access="write:attributes" limbo_access="1">
		<field attribute="x_set_title">
			<boolean true_text="true" false_text="false" />
		</field>
		<field attribute="y_set_title">
			<boolean true_text="true" false_text="false" />
		</field>
		<field attribute="x_set_interval">
			<int width="2" />
		</field>
		<field attribute="y_set_interval">
			<int width="2" />
		</field>
	</section>
	<section name="Line And Border Colours" write_access="write:attributes" limbo_access="1">
		<field attribute="line_colour">
			<colour />
		</field>
		<field attribute="border_colour">
			<colour />
		</field>
	</section>
	<section name="Fill Colors And Gradients" write_access="write:attributes" limbo_access="1">
		<field attribute="fill_colour" show_if="assetWriteAccess">
			<colour />
		</field>
		<field>
			<function_call>
				<paint_function name="paintFillColour"    />
				<process_function name="processFillColour"/>
			</function_call>
		</field>
		<field attribute="fill_grad_type">
			<selection style="list" />
		</field>
		<field attribute="fill_gradient_min">
			<colour />
		</field>
		<field attribute="fill_gradient_max">
			<colour />
		</field>
	</section>
	<section name="Background Colors And Gradients" write_access="write:attributes" limbo_access="1">
		<field attribute="background_colour">
			<colour />
		</field>
		<field attribute="back_grad_type">
			<selection style="list" />
		</field>
		<field attribute="back_gradient_min">
			<colour />
		</field>
		<field attribute="back_gradient_max">
			<colour />
		</field>
	</section>
	<section name="Styles And Markers" write_access="write:attributes" limbo_access="1">
		<field attribute="line_style">
			<selection style="list" />
		</field>
		<field attribute="value_marker">
			<selection style="list" />
		</field>
		<field attribute="general_marker" >
			<selection style="list" />
		</field>
		<field attribute="marker_type" show_if="valueMarkerNotEmpty">
			<selection style="list" />
		</field>
		<field attribute="marker_format" show_if="valueMarkerNotEmpty">
			<selection style="list" />
		</field>
		<field attribute="format_value" show_if="valueMarkerNotEmpty">
			<text width="25" height="1" />
		</field>
		<field attribute="marker_background">
			<colour />
		</field>
	</section>
</contents>
