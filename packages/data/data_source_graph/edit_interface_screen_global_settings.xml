<contents>
    <section name="Global Settings" write_access="write:attributes" limbo_access="1">
        <field attribute="width">
            <display_name>Width</display_name>
            <note />
            <int width="5" />
        </field>
        <field attribute="height">
            <display_name>Height</display_name>
            <note />
            <int width="5" />
        </field>
        <field attribute="alt">
            <display_name>Alt</display_name>
            <note />
            <text width="40" height="1" />
        </field>
        <field attribute="show_graph_title">
            <display_name>Show the graph title?</display_name>
            <note />
            <boolean true_text="yes" false_text="no" />
        </field>
        <field attribute="x_set_title">
            <display_name>Title for x-Axis</display_name>
            <note />
            <text width="25" height="1" />
        </field>
        <field attribute="y_set_title">
            <display_name>Title for y-Axis</display_name>
            <note />
            <text width="25" height="1"/>
        </field>
        <field attribute="x_label_interval">
            <display_name>Label Intervals for x-Axis</display_name>
            <note />
            <int width="2" />
        </field>
        <field attribute="y_label_interval">
            <display_name>Label Intervals for y-Axis</display_name>
            <note />
            <int width="2" />
        </field>
        <field attribute="graph_angle">
            <display_name>Angle for the graph</display_name>
            <note />
            <boolean true_text="vertical" false_text="horizontal" />
        </field>
        <field attribute="x_font_label_angle">
            <display_name>Angle for x-Axis Label</display_name>
            <note />
            <boolean true_text="vertical" false_text="horizontal" />
        </field>
        <field attribute="y_font_label_angle">
            <display_name>Angle for y-Axis Label</display_name>
            <note />
            <boolean true_text="vertical" false_text="horizontal" />
        </field>
        <field attribute="show_legend">
            <display_name>Show the legend area?</display_name>
            <note />
            <boolean true_text="yes" false_text="no" />
        </field>
        <field attribute="background">
            <display_name>Background Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="border_colour">
            <display_name>Border Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="x_axis_colour">
            <display_name>x-Axis Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="y_axis_colour">
            <display_name>y-Axis Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="x_font_axis_colour">
            <display_name>x-Axis Font Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="y_font_axis_colour">
            <display_name>y-Axis Font Colour</display_name>
            <note />
            <colour />
        </field>
        <field attribute="axis_left_padding">
            <display_name>Axis Left padding</display_name>
            <note />
            <int width="5" />
        </field>
        <field attribute="axis_right_padding">
            <display_name>Axis Right padding</display_name>
            <note />
            <int width="5" />
        </field>
        <field attribute="axis_top_padding">
            <display_name>Axis Top padding</display_name>
            <note />
            <int width="5" />
        </field>
        <field attribute="axis_bottom_padding">
            <display_name>Axis Bottom padding</display_name>
            <note />
            <int width="5" />
        </field>
    </section>
    <section name="Preview" write_access="write:attributes" limbo_access="1">
        <field>
            <function_call>
                <paint_function name="paintGlobalSettingPreview" />
                <process_function name="processGlobalSettingPreview" />
            </function_call>
        </field>
    </section>
</contents>
