<contents>

	<section name="Details">
		<field attribute="name">
			<display_name>Page Name</display_name>
			<note />
		</field>
	</section>
	<section name="SOAP Configuration">
		<field attribute="soap_operation_asset">
			<display_name>SOAP Operation Asset</display_name>
		</field>

		<field>
			<display_name>Input Map</display_name>
			<function_call>
				<paint_function name="paintOperationInputs" />
				<process_function name="processOperationInputs" />
			</function_call>
		</field>
		<field attribute="use_application_layout">
			<display_name>Use application's layout bodycopy?</display_name>
		</field>
		<field>
			<function_call>
				<paint_function name="paintAddForm" />
				<process_function name="processAddForm" />
			</function_call>
			<display_name>Form</display_name>
		</field>
	</section>
	<section name="Data Mappings" write_access="write:attributes" show_if="hasDataMappings">
		<function_call>
			<paint_function name="paintDataMappings" />
			<process_function name="processDataMappings" />
		</function_call>
	</section>
</contents>