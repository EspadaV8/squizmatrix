<schema>
   <tables>
	   <table name="lex_thes_term" require_rollback="0">
		   <columns>
			   <column name="linkid" allow_null="0">
				   <type>INTEGER</type>
				   <type_variations />
				   <default />
				   <description>ID of link between two terms</description>
			   </column>
			   <column name="major" allow_null="1">
				   <type>VARCHAR(255)</type>
				   <type_variations />
				   <default />
				   <description>Parent Term</description>
			   </column>
			   <column name="minor" allow_null="0">
				   <type>VARCHAR(255)</type>
				   <type_variations />
				   <default />
				   <description>Term</description>
			   </column>
			   <column name="relation" allow_null="1">
				   <type>VARCHAR(100)</type>
				   <type_variations />
				   <default />
				   <description>Term</description>
			   </column>
			   <column name="sort_order" allow_null="0">
				   <type>INTEGER</type>
				   <type_variations />
				   <default />
				   <description>Sort Order</description>
			   </column>
			   <column name="thesid" allow_null="0">
				   <type>VARCHAR(15)</type>
				   <type_variations />
				   <default />
				   <description>Thesaurus Asset ID</description>
			   </column>
		   </columns>
		   <keys>
			   <primary_key>
				   <column name="linkid" />
				   <column name="treeid" />
			   </primary_key>
		   </keys>
		   <indexes>
			   <index>
				   <column name="linkid" />
			   </index>
			   <index>
				   <column name="major" />
			   </index>
			   <index>
				   <column name="minor" />
			   </index>
			   <index>
				   <column name="relation" />
			   </index>
			   <index>
				   <column name="thesid" />
			   </index>
		   </indexes>
	   </table>
	<table name="lex_thes_lnk_tree" require_rollback="0">
			<columns>
				<column name="treeid" allow_null="0">
					<type>VARCHAR(2000)</type>
					<type_variations>
						<pgsql>BYTEA</pgsql>
					</type_variations>
					<default>''</default>
					<description />
				</column>
				<column name="linkid" allow_null="0">
					<type>INT</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="thesid" allow_null="0">
					<type>VARCHAR(15)</type>
					<type_variations />
					<default />
					<description>Thesaurus Asset ID</description>
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="treeid" />
				</primary_key>
			</keys>
			<indexes>
				<index>
					<column name="linkid" />
				</index>
			</indexes>
		</table>
   </tables>
   <sequences>
	   <sequence name="lex_thes_term_linkid" />
   </sequences>
</schema>
