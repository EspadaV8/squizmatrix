<contents>
	<section name="Progress">
		<display_name>Progress</display_name>
		<note />
		<function_call>
			<paint_function name="paintProgress" />
			<process_function name="processProgress" />
		</function_call>
	</section>
	<section name="Details">
		<field attribute="name">
			<display_name>Name</display_name>
			<note />
		</field>
	</section>
	<section name="Recipients">
		<field>
			<display_name>To</display_name>
			<note />
			<function_call>
				<paint_function name="paintRecipients" />
				<process_function name="processRecipients" />
			</function_call>
		</field>
	</section>
	<section name="Content Details" write_access="write:attributes">
		<field attribute="content_assetid">
			<display_name>Content Page</display_name>
			<note>Select the asset to be sent in the email</note>
		</field>
		<field>
			<display_name>Content Generation Method</display_name>
			<note />
			<function_call>
				<paint_function name="paintContentDetails" />
				<process_function name="processContentDetails" />
			</function_call>
		</field>
	</section>
	<section name="Header Details" write_access="write:attributes">
		<function_call>
			<paint_function name="paintHeaderDetails" />
			<process_function name="processHeaderDetails" />
		</function_call>
	</section>
</contents>