<schema>
	<tables>
		<table name="bulkmail_queue" require_rollback="0">
			<columns>
				<column name="id" allow_null="0">
					<type>VARCHAR(255)</type>
					<type_variations />
					<default />
					<description>The assetid of the Bulkmail_Job asset, or none if this is an ad hoc bulkmail job</description>
				</column>
				<column name="post_office_id" allow_null="0">
					<type>VARCHAR(15)</type>
					<type_variations />
					<default />
					<description>The assetid of the Bulkmail_Post_Office asset (either the parent or the default system post office)</description>
				</column>
				<column name="status" allow_null="0">
					<type>SMALLINT</type>
					<type_variations />
					<default>0</default>
					<description>Current status of the job (Queued, Running and Paused)</description>
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="id" />
				</primary_key>
			</keys>
			<indexes>
				<index>
					<column name="id" />
				</index>
				<index>
					<column name="post_office_id" />
				</index>
				<index>
					<column name="status" />
				</index>
			</indexes>
		</table>
	</tables>
	<sequences />
</schema>
