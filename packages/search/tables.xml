<schema>
	<tables>
		<table name="sch_idx" require_rollback="0">
			<columns>
				<column name="value" allow_null="0">
					<type>VARCHAR(255)</type>
					<type_variations>
						<oci8>CLOB</oci8>
					</type_variations>
					<default />
					<description>Value of the keydata.</description>
				</column>
				<column name="assetid" allow_null="0">
					<type>VARCHAR(255)</type>
					<type_variations />
					<default />
					<description>ID of the asset to which this keydata applies to.</description>
				</column>
				<column name="type_code" allow_null="0">
					<type>VARCHAR(100)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="component" allow_null="1">
					<type>VARCHAR(255)</type>
					<type_variations />
					<default>''</default>
					<description>Which component of the asset this keydata applies to (e.g. attribute:23) </description>
				</column>
				<column name="type" allow_null="0">
					<type>VARCHAR(255)</type>
					<type_variations />
					<default>'word'</default>
					<description>The type of the keydata (e.g. 'date', 'word', 'number').</description>
				</column>
				<column name="score" allow_null="0">
					<type>INT</type>
					<type_variations />
					<default>0</default>
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="value" />
					<column name="assetid" />
					<column name="component" />
				</primary_key>
			</keys>
			<indexes>
				<index db="pgsql">
					<column name="value" />
				</index>
				<index db="oci8" type="CTXSYS.CONTEXT parameters('STOPLIST ctxsys.default_stoplist')">
					<column name="value" />
				</index>
				<index>
					<column name="assetid" />
				</index>
				<index>
					<column name="type" />
				</index>
				<index>
					<column name="component" />
				</index>
			</indexes>
		</table>
	</tables>
	<sequences />
</schema>