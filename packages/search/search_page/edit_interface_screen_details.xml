<contents>
	<section name="Details">
		<field read_access="" write_access="write:attributes" attribute="name">
			<display_name>Name</display_name>
			<note />
			<text width="15" />
		</field>
		<field read_access="" write_access="write:attributes" attribute="short_name">
			<display_name>Short Name</display_name>
			<note />
			<text width="15" />
		</field>
	</section>
	<section name="Search Parameters">
		<field read_access="" write_access="write:attributes">
			<display_name>Root Asset</display_name>
			<note>Searches will be restricted to trees rooted at this asset.</note>
			<function_call>
				<paint_function   name="paintRootAsset" />
				<process_function name="processRootAsset" />
			</function_call>
		</field>
	</section>
	<section name="Display Options">
		<field attribute="results_per_page" read_access="" write_access="write:attributes" >
			<display_name>Results Per Page</display_name>
			<note>The default results per page.</note>
			<int width="5" />
		</field>
	</section>
</contents>