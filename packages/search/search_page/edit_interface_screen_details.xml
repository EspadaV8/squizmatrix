<contents>
	<section name="Details">
		<field write_access="write:attributes" attribute="name">
			<display_name>Name</display_name>
			<note />
			<text width="15" />
		</field>
		<field write_access="write:attributes" attribute="short_name">
			<display_name>Short Name</display_name>
			<note />
			<text width="15" />
		</field>
	</section>
	<section name="Search Parameters">
		<field write_access="write:links">
			<display_name>Root Asset</display_name>
			<note>Searches will be restricted to trees rooted at this asset.</note>
			<function_call>
				<paint_function   name="paintRootAsset" />
				<process_function name="processRootAsset" />
			</function_call>
		</field>
		<field write_access="write:attributes">
			<display_name>Search Statuses</display_name>
			<note>Searches will be restricted to assets with these statuses.</note>
			<function_call>
				<paint_function   name="paintStatus" />
				<process_function name="processStatus" />
			</function_call>
		</field>
	</section>
	<section name="Display Options">
		<field attribute="results_per_page" read_access="" write_access="write:attributes" >
			<display_name>Results Per Page</display_name>
			<note>The default results per page.</note>
			<int width="5" />
		</field>
		<field attribute="lineage_seperator" read_access="" write_access="write:attributes" >
			<display_name>Lineage Seperator</display_name>
			<note>Seperator to use when printing the lineage to a search result asset.</note>
			<text />
		</field>
		<field attribute="submit_button_text" read_access="" write_access="write:attributes" >
			<display_name>Submit button text</display_name>
			<note>This text will appear on the submit button of this search page</note>
			<text />
		</field>
		<field attribute="sort_by" read_access="" write_access="write:attributes" >
			<display_name>Sort By</display_name>
			<note>The order in which assets are sorted</note>
			<selection />
		</field>
		<field attribute="reverse_sort" read_access="" write_access="write:attributes" >
			<display_name>Reverse Sort</display_name>
			<note>Sorts results in reverse order</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
</contents>