<contents>
	<section name="Details" write_access="write:attributes">
		<field attribute="name">
			<text width="35" height="1" />
		</field>
		<field attribute="short_name">
			<text width="25" height="1" />
		</field>
	</section>
	<section name="Location" write_access="write:attributes">
		<field attribute="remote_url">
			<text width="80" height="1" />
		</field>
		<field attribute="load_links">
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="only_local_links">
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
	<section name="Content Filtering" write_access="write:attributes">
		<field attribute="start_tag">
			<text width="35" height="1" />
		</field>
		<field attribute="end_tag">
			<text width="35" height="1" />
		</field>
		<field attribute="include_tags">
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="strip_images">
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
	<section name="Content Tunneling" write_access="write:attributes">
		<field attribute="tunnel_images">
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="tunnel_media">
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="tunnel_scripts">
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
	<section name="Connection Settings" write_access="write:attributes">
		<field attribute="timeout">
			<int width="5" />
		</field>
		<field attribute="allow_redirect">
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
	<section name="HTTP Authentication" write_access="write:attributes">
		<field attribute="username">
			<text width="35" height="1" />
		</field>
		<field attribute="password">
			<password width="25" height="1" />
		</field>
	</section>
</contents>
