<contents>
	<section name="Locking / Editing">
	    <field>
			<display_name></display_name>
			<note></note>
			<function_call>
				<paint_function   name="paintLockMessage"   />
				<process_function name="processLockMessage" />
			</function_call>
		</field>
	</section>
	<section name="Question Options">
	    <field attribute="name">
			<display_name>Title</display_name>
			<note></note>
		</field>
		<field attribute="note">
			<display_name>Note</display_name>
			<note></note>
		</field>
		<field attribute="options">
			<display_name>Options</display_name>
			<note>Enter possible options - to add an option, type the name of the option and click 'Add'; to delete an option, click the 'Del' link next to an option</note>
		</field>
		<field>
			<display_name>Default</display_name>
			<note></note>
			<function_call>
				<paint_function   name="paintDefault"   />
				<process_function name="processDefault" />
			</function_call>
		</field>
		<field attribute="horizontal">
			<display_name>Orientation</display_name>
			<note>Defines if options are listed horizontally or vertically</note>
		</field>
		<field attribute="extra">
			<display_name>Extras</display_name>
			<note>Provides a means of specifying CSS classes, javascript onClick functions or other INPUT tag attributes, eg class="yourCssClass"</note>
		</field>
	</section>
	<section name="Simple Validation Rules">
	    <field attribute="is_required">
			<display_name>Required Entry?</display_name>
			<note>If required, at least one radio button must be selected before the form can be submitted</note>
		</field>
	</section>
</contents>