<contents>
	<section name="Details" write_access="write:attributes" limbo_access="1">
		<field attribute="name">
			<text width="35" height="1" />
		</field>
		<field attribute="short_name">
			<text width="25" height="1" />
		</field>
	</section>
	<section name="Button details" write_access="write:attributes" limbo_access="1">
		<field attribute="button_type">
			<selection style="list" />
		</field>
		<field attribute="item_name">
			<text width="60" height="1" />
		</field>
		<field attribute="item_id">
			<text width="10" height="1" />
		</field>
		<field attribute="price">
			<text width="10" height="1" />
		</field>
		<field attribute="currency">
			<selection style="list" />
		</field>
		<field attribute="undefined_quantity">
			<boolean true_text="yes" false_text="no" />
		</field>
		<field attribute="merchant_id">
			<text width="60" height="1" />
		</field>
		<field attribute="custom_var">
			<text width="60" height="1" />
		</field>
		<field attribute="notify_url">
			<text width="60" height="1" />
		</field>
		<field attribute="return_url">
			<text width="60" height="1" />
		</field>
		<field attribute="cancel_return_url">
			<text width="60" height="1" />
		</field>
		<field attribute="post_url">
			<text width="60" height="1" />
		</field>
		<field attribute="image_url">
			<text width="60" height="1" />
		</field>
		<field>
			<function_call>
				<paint_function   name="paintExtraVars"   />
				<process_function name="processExtraVars" />
			</function_call>
		</field>
	</section>
	<section name="Testing Mode" write_access="write:attributes">
		<field attribute="test_mode">
			<boolean true_text="on" false_text="off" />
		</field>
	</section>
</contents>