<contents>
	<section name="Order Details" write_access="write:none">
		<field>
			<function_call>
				<paint_function   name="paintDeliveryMethod"   />
			</function_call>
		</field>
		<field>
			<function_call>
				<paint_function   name="paintOrderStatus"   />
			</function_call>
		</field>
		<field attribute="billing_name">
			<text width="30" height="1" />
		</field>
		<field attribute="billing_addr">
			<text width="30" height="8" />
