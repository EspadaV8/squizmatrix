<contents>
	<section name="Details" write_access="write:attributes">
		<field attribute="name">
			<text width="35" height="1" />
		</field>
		<field attribute="short_name">
			<text width="25" height="1" />
		</field>
	</section>
	<section name="UTransact Account Details" write_access="write:attributes">
		<field attribute="bgas_webservice_url">
			<text width="60" />
		</field>		
		<field attribute="transactions_webservice_url">
			<text width="60" />
		</field>		
		<field attribute="services_webservice_url">
			<text width="60" />
		</field>
		<field attribute="username">
			<text width="20" height="1" />
		</field>
		<field>
			<function_call>
				<paint_function   name="paintAccountPassword"  />
				<process_function name="processAccountPassword" />
			</function_call>			
		</field>		
		<field attribute="merchant_id">
			<text width="10"/>
		</field>		
		<field attribute="payment_model">
			<text width="10"/>
		</field>

	</section>
	<section name="Card Verification 2 code property(CV2)" write_access="write:attributes">
		<field attribute="display_ccv">
			<boolean true_text="yes" false_text="no" />
		</field>
	</section>

	<section name="Purchaser Checkout Form Question Map" write_access="write:attributes">
        <field attribute="map_firstname_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_surname_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_email_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_address1_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_address2_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_suburb_assetid">
            <assetid type_codes="form_question:D" />
        </field>
        <field attribute="map_city_assetid">
            <assetid type_codes="form_question:D" />
        </field>        
        <field attribute="map_postcode_assetid">
            <assetid type_codes="form_question:D" />
        </field>        
	</section>

	<section name="Interface Options" write_access="write:attributes">
		<field attribute="submit_text">
			<text width="35" height="1" />
		</field>
		<field attribute="reset_text">
			<text width="35" height="1" />
		</field>
		<field attribute="cancel_text">
			<text width="35" height="1" />
		</field>
	</section>
	
</contents>
